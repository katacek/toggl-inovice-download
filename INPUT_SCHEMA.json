{
    "title": "Toggl.com invoice download",
    "description": "To run the actor, Toggl.com credentials must be provided. Dropbox token and email for notification are optional.",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "togglUserName": {
            "title": "username",
            "type": "string",
            "description": "username on toggl.com",
            "prefill": "user@company.com",
            "editor": "javascript"
	    },
        "togglPassword": {
            "title": "TogglAccountPassword123",
            "type": "string",
            "description": "Toggl account password",
            "prefill": "password123",
            "editor": "javascript"
        },
        "dropboxToken": {
            "title": "Dropbox token",
            "type": "string",
            "description": "Token for dropbox",
            "prefill": "GCDRDJKU%$#%$(&f",
            "editor": "javascript"
        },
        "pathToDropbox": {
            "title": "Path to Dropbox",
            "type": "string",
            "description": "Path where to upload the invoice on Dropbox. The invoice will be uploaded with predefined name month_DD_YYYY_toggl.pdf",
            "prefill": "/2020_01",
            "editor": "javascript"
        },
        "emailTo": {
            "title": "Email to",
            "type": "string",
            "description": "Email address for sending the notification.",
            "prefill": "user@company.com",
            "editor": "javascript"
        }
    },
    "required": ["TogglUserName", "TogglPassword"]
}
