{
    "title": "Toggl.com invoice download",
    "description": "To run the actor, Toggl.com credentials must be provided. 'Dropbox token', 'path to dropbox' and 'email to' are optional.",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "togglUserName": {
            "title": "Toggl username",
            "type": "string",
            "description": "username on toggl.com",
            "prefill": "user@company.com",
            "editor": "textfield"
	    },
        "togglPassword": {
            "title": "Toggl Account Password",
            "type": "string",
            "description": "Toggl account password",
            "prefill": "password123",
            "editor": "textfield"
        },
        "dropboxToken": {
            "title": "Dropbox token",
            "type": "string",
            "description": "Token for dropbox",
            "prefill": "GCDRDJKU%$#%$(&f",
            "editor": "textfield"
        },
        "pathToDropbox": {
            "title": "Path to Dropbox",
            "type": "string",
            "description": "Path where to upload the invoice on Dropbox. The invoice will be uploaded with predefined name month_DD_YYYY_toggl.pdf",
            "prefill": "/2020_01",
            "editor": "textfield"
        },
        "emailTo": {
            "title": "Email to",
            "type": "string",
            "description": "Email address for sending the notification.",
            "prefill": "user@company.com",
            "editor": "textfield"
        }
    }
}
